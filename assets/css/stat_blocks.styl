div.ladder-stats {
	display flex;
	justify-content space-around;
	.stat {
		border:none;
		min-width:20%;
		padding: 0 40px;
		.label {
			font-size 24px;
			border-bottom: 5px solid blizzBlueBorder;
		}
		.value {
			text-align:center;
			font-size 36px;
		}
	}	
}

.race-logo {
	height: 45px;
	vertical-align middle;
	margin-right 15px;
	margin-left:33px;
	&.Zerg {
		fill: zergPurple;
		color: zergPurple;
	}
	&.Terran {
		fill: terranRed;
		stroke: darken(terranRed, 50%);
		stroke-width: 1px;
	}
	&.Protoss {
		fill: tossGold;
		stroke: blizzBtnBlue;
		stroke-width: 10px;
	}
}