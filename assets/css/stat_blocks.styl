@require colors;

ul.record {
	display:flex;
	padding:0;
	margin:0;
	list-style: none;
	align-items: center;
	
	padding: 8px 16px;
	&.natural {
		li {
			width auto;
		}
	}
	li {
		font-size:16px;
		text-align: center;
		width:75px;
		border-radius: 8px;
		margin:0 16px;
		.value {
			font-size: 24px;
			border-bottom: 2px solid blizzBlueBorder;
			margin-bottom:10px;
			padding-bottom:10px;
		}
		&.arrow {
			svg {
				height:50px;
			}
		}
	}
}

.stats {
	display flex;
	justify-content space-between;
	flex-wrap wrap;
	.stat {
		h2 {
			margin-left: 34px
		}
		background-color blizzGrey;
		padding: 8px;
	    display: inline-block;
	    border-image: url("/images/sc2 border.svg") 20% 10% fill stretch;
	    border-image-width: 200px;
	    border-image-outset: 14px 22px;
	    width: calc(50% - 8px);
	    margin: 14px 24px;
	    margin-bottom: 40px;
	    min-height 155px;
		&.full-width {
			width: 100%;
		}
	}
}
.col-2 {
	.stats {
		.stat {
			&.full-width {
				width: calc(100% - 50px);
			}
		}
	}
}

