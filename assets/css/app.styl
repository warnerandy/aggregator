@require colors;

/* This file is for your main application css. */
body {
	color: black;
	.container {
		max-width: 1200px;
		margin: 0 auto;
	}
	.losses {
		color: red;
	}

	.wins {
		// color: rgb(178,214,133);
		color: teal;
	}
	
	nav {
		background-color:lightGrey;
		padding:8px 16px;
		ul.nav {
			margin:0;
			padding:0;
			display: inline-block;
			li {
				display: inline-block;
				a {
					padding: 8px 16px;
					text-decoration: none;
					color:black;
					display: inline-block;
					&:hover {
						background-color: teal;
						color: white;
					}
				}
				&.active{
					a {
						background-color: teal;
						color: white;
					}
				}
			}
			&.nav-right {
				float: right;
			}
		}
	}	
}

ul.record {
	display:flex;
	padding:0;
	margin:0;
	list-style: none;
	li {
		font-size:24px;
		text-align: center;
		width:100px;
		border: 2px solid lightGrey;
		border-radius: 8px;
		margin:0 16px;
		.stat {
			font-size: 36px;
		}
	}
}
.col-2 {
	display:flex;
	justify-content:space-between;
	article {

		display: inline-block;
		width: 49%;
	}
}
h3 {
	border-bottom: 1px solid lightGrey;
}